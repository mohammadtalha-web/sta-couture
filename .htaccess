# Professional Maison .htaccess
# Optimized for InfinityFree/Apache Production

# 1. Disable Directory Listing
Options -Indexes

# 2. SEO - Hide .php Extensions
RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# 3. Force HTTPS (Crucial for Live Sites)
# Un-comment the next lines after installing SSL on InfinityFree
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 4. Error Document Handling
# ErrorDocument 404 /projectdone/404.php

# 5. Protect Sensitive Files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

<Files "shop_db.sql">
    Order allow,deny
    Deny from all
</Files>
